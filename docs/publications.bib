	volume = {28},
	issn = {1461-023X},
	url = {https://www.ncbi.nlm.nih.gov/pmc/articles/PMC12050385/},
	doi = {10.1111/ele.70119},
	abstract = {Predicting species range shifts in response to environmental change requires the determination of regions where individuals maintain a positive energy budget. For hibernating animals, this budget depends on two physiological states (normothermy and torpor) that alternate in response to ambient temperature. To study range shifts of hibernators like the common noctule (
Nyctalus noctula
), we developed an ecophysiological approach that integrates metabolic rates, physiological states, and environmental conditions. Our model accurately hindcasted the northward range shift of this migratory bat over the past 50 years. Under climate change forecasts SSP1-2.6, SSP2-4.5, SSP3-7.0, and SSP5-8.5, for which winters will shorten by 1.4{\textendash}41 days and warm by 0.11{\textdegree}C{\textendash}2.3{\textdegree}C, the hibernation area is predicted to shift by 78{\textendash}732 km and expand north-eastward by 5.8\%{\textendash}14\% by 2100. Mean ambient temperature and winter duration prove sufficient to approximate the hibernation niche and may be used to predict changes in hibernation areas where collecting physiological measurements is difficult., Our study pioneers a methodology integrating empirical physiology measurements with climate models, enabling accurate predictions of the distribution of hibernating animals under projected climate change scenarios.},
	number = {5},
	urldate = {2025-05-08},
	journal = {Ecology Letters},
	author = {Kravchenko, K. A. and Voigt, Christian C. and Volkholz, Jan and Courtiol, Alexandre and Currie, Shannon E.},
	month = may,
	year = {2025},
	keywords = {dzg\_recent, dzg\_best, dzg\_conservation\_climate, dzg\_taxon\_bat, dzg\_traits\_climate, dzg\_traits\_fitness},
	pages = {e70119},
}

@article{culina_connecting_2021,
	title = {Connecting the data landscape of long-term ecological studies: {The} {SPI}-{Birds} data hub},
